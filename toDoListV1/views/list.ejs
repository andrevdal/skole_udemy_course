<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>To do list</title>
    </head>
    <body>
        <h1><%= dayOfWeek %></h1>
        <ul>
            <% newTasks.forEach((e)=>{ %>
                <li>
                    <%= e %>
                </li>
            <% }) %>
        </ul>
        <form action="/" method="post">
            <input type="text" placeholder="Task" name="taskInput">
            <button type="submit" name="taskAddButton">Add</button>
        </form>
    </body>
</html>